                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Program Code: CDCS2515B"
                            android:textColor="#555555"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:background="#E0E0E0"/>

                <!-- MEMBER 2 -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/profile_najwa"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/circle_image"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Nurhanisa Najwa binti Nordin"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Student No: 2023414412"
                            android:textColor="#555555"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Program Code: CDCS2515B"
                            android:textColor="#555555"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:background="#E0E0E0"/>

                <!-- MEMBER 3 -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/profile_tassnim"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/circle_image"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Puteri Noor Tassnim binti Abdul Mu'iz"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Student No: 2023837452"
                            android:textColor="#555555"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

