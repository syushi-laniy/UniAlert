<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="18dp"
    app:cardElevation="3dp"
    app:strokeColor="@color/cotton_rose"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/card_cream">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/celadon_light">

            <TextView
                android:id="@+id/tvIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="!"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvIncidentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accident"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_dark"/>

            <TextView
                android:id="@+id/tvIncidentDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Short description goes hereâ€¦"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/text_muted"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Feb 2026, 1:10 AM"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"/>

                <!-- NEW badge removed -->
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="NEW"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/baby_pink"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="By: User"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
